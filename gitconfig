[init]
  defaultBranch = main
  templatedir = ~/.git_template
[push]
  default = current
[color]
  ui = auto
[alias]
  l = log --oneline --graph
  pf = push --force-with-lease
  st = status
  dft = difftool
[core]
  excludesfile = ~/.gitignore
  autocrlf = input
  pager = delta
[merge]
  ff = only
  conflictstyle = diff3
[pull]
  ff = only
[merge "gemfilelock"]
  name = relocks Gemfile.lock
  driver = bundle install
[commit]
  gpgsign = true
  template = ~/.gitmessage
[user]
  name = Jesse Bailey
  email = jesse@jsilasbailey.com
  signingkey = FD8F583FD8970F92
[fetch]
  prune = true
[rebase]
  autosquash = true
  autostash = true
[diff]
  colorMoved = default
[difftool]
  prompt = false
[delta]
  light = false # dark terminal background
  navigate = true
  features = line-numbers side-by-side decorations
[pager]
  diff = delta
  log = delta
  reflog = delta
  show = delta
  difftool = true
[interactive]
  diffFilter = delta --color-only
[add.interactive]
  useBuiltin = false # required for git 2.37.0
[filter "lfs"]
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
