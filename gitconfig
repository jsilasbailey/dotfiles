[init]
  defaultBranch = main
  templatedir = ~/.git_template
[push]
  default = current
[color]
  ui = auto
[alias]
  branches = for-each-ref --sort=-committerdate --format=\"%(color:blue)%(authordate:relative)\t%(color:red)%(authorname)\t%(color:white)%(color:bold)%(refname:short)\" refs/remotes
  l = log --oneline --graph
  pf = push --force-with-lease
  st = status
  dft = difftool
[core]
  excludesfile = ~/.gitignore
  autocrlf = input
[merge]
  ff = only
[pull]
  ff = only
[merge "gemfilelock"]
  name = relocks Gemfile.lock
  driver = bundle install
[commit]
  gpgsign = true
  template = ~/.gitmessage
[gpg]
  program = /usr/local/MacGPG2/bin/gpg2
[user]
	name = Jesse Bailey
	email = jsilasbailey@thoughtbot.com
	signingkey = B10719923C734A6E39B7E7F2F6437CEADF88097F
[fetch]
  prune = true
[rebase]
  autosquash = true
  autostash = true
[diff]
  colorMoved = zebra
  tool = difftastic
[difftool]
  prompt = false
[difftool "difftastic"]
  cmd = difft "$LOCAL" "$REMOTE"
[delta]
  syntax-theme = Dracula
  features = line-numbers side-by-side decorations
[pager]
  diff = delta
  log = delta
  reflog = delta
  show = delta
  difftool = true
[interactive]
  diffFilter = delta --color-only
