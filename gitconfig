[init]
  defaultBranch = main
  templatedir = ~/.git_template
[push]
  default = current
[color]
  ui = auto
[alias]
  l = log --oneline --graph
  pf = push --force-with-lease
  st = status
  dft = difftool
[core]
  excludesfile = ~/.gitignore
  autocrlf = input
[merge]
  ff = only
[pull]
  ff = only
[merge "gemfilelock"]
  name = relocks Gemfile.lock
  driver = bundle install
[commit]
  gpgsign = true
  template = ~/.gitmessage
[user]
  name = Jesse Bailey
  email = jesse@jsilasbailey.com
  signingkey = FD8F583FD8970F92
[fetch]
  prune = true
[rebase]
  autosquash = true
  autostash = true
[diff]
  colorMoved = zebra
  tool = difftastic
[difftool]
  prompt = false
[difftool "difftastic"]
  cmd = difft "$LOCAL" "$REMOTE"
[delta]
  syntax-theme = Dracula
  features = line-numbers side-by-side decorations
[pager]
  diff = delta
  log = delta
  reflog = delta
  show = delta
  difftool = true
[interactive]
  diffFilter = delta --color-only
[filter "lfs"]
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
