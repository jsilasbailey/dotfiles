  prlog = "log --reverse --pretty=format:'# %s %n%n%b%n'" 
  pf = push --force-with-lease
  dft = difftool
  c = checkout
[core]
  excludesfile = ~/.gitignore
  autocrlf = input
  pager = delta
  commentChar = ";"
[merge]
  ff = only
  conflictstyle = diff3
[pull]
  ff = only
[merge "gemfilelock"]
  name = relocks Gemfile.lock
  driver = bundle install
